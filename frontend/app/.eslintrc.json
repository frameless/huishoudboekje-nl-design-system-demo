{
  "extends": [
    "eslint:recommended",
    "react-app"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "@typescript-eslint/no-use-before-define": [
      "off"
    ],
    "react/prop-types": [
      "off"
    ],
    "indent": [
      "warn",
      "tab"
    ],
    "brace-style": [
      "warn",
      "stroustrup"
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "no-mixed-spaces-and-tabs": [
      "warn",
      "smart-tabs"
    ],
    "no-trailing-spaces": [
      "warn"
    ],
    "eol-last": [
      "warn",
      "never"
    ],
    "no-empty": [
      "warn"
    ],
    "react/self-closing-comp": [
      "warn",
      {
        "component": true,
        "html": false
      }
    ]
  },
  "ignorePatterns": [
    "node_modules",
    "build"
  ]
}