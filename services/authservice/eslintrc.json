{
  "extends": [
	"eslint:recommended"
  ],
  "plugins": [
	"react"
  ],
  "rules": {
	"@typescript-eslint/no-use-before-define": [
	  "off"
	],
	"indent": [
	  "warn",
	  "tab",
	  {
		"SwitchCase": 1
	  }
	],
	"brace-style": [
	  "warn",
	  "stroustrup"
	],
	"linebreak-style": [
	  "warn",
	  "unix"
	],
	"quotes": [
	  "warn",
	  "double"
	],
	"no-mixed-spaces-and-tabs": [
	  "warn",
	  "smart-tabs"
	],
	"no-trailing-spaces": [
	  "warn"
	],
	"eol-last": [
	  "warn",
	  "never"
	],
	"no-empty": [
	  "warn"
	],
	"no-console": [
	  "warn",
	  {
		"allow": [
		  "error",
		  "info"
		]
	  }
	]
  },
  "ignorePatterns": [
	"node_modules",
	"build"
  ]
}