datasource db {
  provider      = "postgresql"
  url           = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x", "darwin"]
}

enum DayOfWeek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

model Alarm {
	id 					String		@id @default(uuid())
	afspraakId			Int
	signaalId			String?
	isActive			Boolean
	datumMargin			Int
	bedrag				Float
	bedragMargin		Float
	byDay				DayOfWeek[]
	byMonth				Int[]
	byMonthDay			Int[]
	startDate			String
	endDate				String?
}
