{
  "name": "@huishoudboekje/mijn-omgeving",
  "version": "0.2.0",
  "description": "Dit component kan als plugin worden gebruikt in een Mijn Gemeente-omgeving.",
  "author": {
	"name": "Koen Brouwer",
	"email": "contact@kbrouwer.nl",
	"url": "https://twitter.com/KoenBrouwer"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
	"dist",
	"README.md"
  ],
  "scripts": {
	"start": "react-scripts --openssl-legacy-provider start",
	"build": "rm -rf dist && tsc --project tsconfig.build.json",
	"test": "react-scripts test",
	"get-schema": "npx --yes -p @apollo/rover rover graph introspect ${PROXY_AUTHORIZATION:+--header \"${PROXY_AUTHORIZATION}\"} ${BASE_URL:-https://test.huishoudboekje.demoground.nl}/api/burgers > schema.graphql",
	"pregen-types": "npm run get-schema",
	"gen-types": "graphql-codegen --config codegen.json",
	"prepublish": "npm run build"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
	"@apollo/client": "^3.5.5",
	"@react-keycloak/web": "^3.4.0",
	"@utrecht/components": "^1.0.0-alpha.95",
	"graphql": "^16.0.1",
	"react": "^17.0.2",
	"react-dom": "^17.0.2",
	"react-scripts": "4.0.3",
	"typescript": "^4.5.2",
	"web-vitals": "^1.1.2"
  },
  "devDependencies": {
	"@graphql-codegen/cli": "^2.3.0",
	"@graphql-codegen/introspection": "2.1.0",
	"@graphql-codegen/typescript": "^2.4.1",
	"@graphql-codegen/typescript-operations": "^2.2.1",
	"@graphql-codegen/typescript-react-apollo": "^3.2.2",
	"@testing-library/jest-dom": "^5.15.1",
	"@testing-library/react": "^11.2.7",
	"@testing-library/user-event": "^12.8.3",
	"@types/jest": "^26.0.24",
	"@types/node": "^12.20.37",
	"@types/react": "^17.0.37",
	"@types/react-dom": "^17.0.11",
	"babel-eslint": "^10.1.0",
	"eslint-config-react-app": "^6.0.0",
	"eslint-plugin-import": "^2.25.3",
	"eslint-plugin-jsx-a11y": "^6.5.1",
	"eslint-plugin-react": "^7.27.1",
	"eslint-plugin-react-app": "^6.2.2",
	"eslint-plugin-react-hooks": "^4.3.0",
	"graphql-tools": "^8.2.0"
  },
  "browserslist": [
	"> 0.5%",
	"not ie 11"
  ]
}
